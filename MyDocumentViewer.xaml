<Window x:Class="_2025_WpfApp4.MyDocumentViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025_WpfApp4"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MyDocumentViewer" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" Executed="NewCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Open" Executed="OpenCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Save" Executed="SaveCommand_Executed" />
    </Window.CommandBindings>
    <DockPanel>
        <ToolBarTray Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" DockPanel.Dock="Top" Background="#FFBDD7F3">
            <ToolBar x:Name="ApplicationToolBar" Height="40" Width="200" Background="#FFF3F2DD">
                <Button x:Name="NewButton" Height="38" Width="38" Command="ApplicationCommands.New">
                    <Image Height="32" Width="32" Source="/new.png"/>
                </Button>
                <Button x:Name="OpenButton" Height="38" Width="38" Command="ApplicationCommands.Open">
                    <Image Height="32" Width="32" Source="/open.png"/>
                </Button>
                <Button x:Name="SaveButton" Height="38" Width="38" Command="ApplicationCommands.Save">
                    <Image Height="32" Width="32" Source="/save.png"/>
                </Button>
                <Button x:Name="TrashButton" Height="38" Width="38" Click="TrashButton_Click">
                    <Image Height="32" Width="32" Source="/trash.png"/>
                </Button>
            </ToolBar>
            <ToolBar x:Name="EditingToolBar" Height="40" Width="578" Background="#FFE0F1DA">
                <ToggleButton x:Name="BoldButton" Height="38" Width="38" Command="EditingCommands.ToggleBold">
                    <Image Width="32" Height="32" Source="/bold.png"/>
                </ToggleButton>
                <ToggleButton x:Name="ItalicButton" Height="38" Width="38"  Command="EditingCommands.ToggleItalic">
                    <Image Width="32" Height="32" Source="/italic.png"/>
                </ToggleButton>
                <ToggleButton x:Name="UnderlineButton" Height="38" Width="38"  Command="EditingCommands.ToggleUnderline">
                    <Image Width="32" Height="32" Source="/underline.png"/>
                </ToggleButton>
                <xctk:ColorPicker x:Name="FontColorPicker" Width="120" Height="32" VerticalAlignment="Center" DisplayColorAndName="True" SelectedColorChanged="FontColorPicker_SelectedColorChanged"/>
                <xctk:ColorPicker x:Name="backgroundColorPicker" Width="120" Height="32" VerticalAlignment="Center" DisplayColorAndName="True" SelectedColorChanged="backgroundColorPicker_SelectedColorChanged" />
                <ComboBox x:Name="FontFamilyComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="30" SelectionChanged="FontFamilyComboBox_SelectionChanged"/>
                <ComboBox x:Name="FontSizeComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" SelectionChanged="FontSizeComboBox_SelectionChanged" />
            </ToolBar>
        </ToolBarTray>
        <StatusBar Height="30" DockPanel.Dock="Bottom" Background="#FFE4E1E1">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
        <RichTextBox x:Name="MainRichTextBox" Margin="10" Padding="5" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="#FFFBF9E9" SelectionChanged="MainRichTextBox_SelectionChanged">
            <FlowDocument/>
        </RichTextBox>
    </DockPanel>
</Window>
